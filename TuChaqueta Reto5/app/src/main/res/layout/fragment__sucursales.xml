<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="usa.sesion15.TuChaqueta.Vista.Fragment_Sucursales">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"><![CDATA[>



        ]]>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0B0B0B">

            <TextView
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:fontFamily="@font/audiowide"
                android:text="SUCURSALES"
                android:textAlignment="center"
                android:textColor="#F8F6F6"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text0des"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/amita"
                android:text="Tenemos sedes en Bogotá. Realizamos envíos a toda Colombia. Amplia la imagen y visitanos."
                android:textAlignment="center"
                android:textColor="#070400"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider2b"
                android:layout_width="367dp"
                android:layout_height="20dp"
                android:background="?android:attr/listDivider" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.osmdroid.views.MapView
                android:id="@+id/openmapview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </TableRow>

    </TableLayout>

</LinearLayout>
